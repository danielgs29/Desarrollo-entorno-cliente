let a=[1,2,3,4];
let b=[5,6,7,8];

function insertarArray(a=[],b=[],posicion){

    let t1=a.length;
    let t2=b.length;
    let t=t1+t2;
    let inicial=a.slice();
    let conta=0;

   for(i=posicion;conta<t2;i++){

    a[i]=b[conta];
    conta++
   }
   for(j=a.length;j<t;j++){

    a[a.length]=inicial[posicion]
    posicion++;

   }
   return a;
}

let c=insertarArray(a,b,3);
console.log(c);